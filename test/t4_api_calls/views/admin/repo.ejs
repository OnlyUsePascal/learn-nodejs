<%- include('../layouts/header') -%>
<main>
  <% if (productList.length > 0) { %>
  <div class="grid">
    <% productList.forEach((product, index) => { %>
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>
      <div class="card__image">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Gutenberg_Bible%2C_Lenox_Copy%2C_New_York_Public_Library%2C_2009._Pic_01.jpg/640px-Gutenberg_Bible%2C_Lenox_Copy%2C_New_York_Public_Library%2C_2009._Pic_01.jpg"
          alt="Image here"
        />
      </div>
      <div class="card__content">
        <h2 class="product__price">$10</h2>
        <p class="product__description">A nice book</p>
      </div>
      <div class="card__actions">
        <a href=<%="/admin/productEdit/" + index %> class="btn">Edit</a>
        <form action=<%="/admin/productDel/" + index %> >
          <button class="btn">Delete</button>
        </form>
      </div>
    </article>
    <% }); %>
  </div>
  <% } else { %>
  <h2>Nothing here :(</h2>
  <% } %> <%- include('../layouts/footer') -%>
</main>
